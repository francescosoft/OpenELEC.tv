    PKG_NAME="vdr-plugin-rpihddevice"
    PKG_VERSION="405aa1b"
    PKG_REV="1"
    PKG_ARCH="any"
    PKG_LICENSE="GPL"
    PKG_SITE=""
    PKG_URL="http://localhost:8000/vdr-plugin-rpihddevice-405aa1b.tar.xz"
    PKG_DEPENDS_TARGET="toolchain vdr ffmpeg"
    PKG_PRIORITY="optional"
    PKG_SECTION="multimedia"
    PKG_SHORTDESC=""
    PKG_LONGDESC=""
    PKG_IS_ADDON="no"
    PKG_AUTORECONF="no"
    PKG_DEPENDS_TARGET="$PKG_DEPENDS_TARGET bcm2835-driver"


    pre_configure_target() {
      export CFLAGS="$CFLAGS \
       -fPIC \
       -I$SYSROOT_PREFIX/usr/include/interface/vcos/pthreads/ \
       -I$SYSROOT_PREFIX/usr/include/interface/vmcs_host/linux"
      export CXXFLAGS="$CXXFLAGS \
        -fPIC \
        -I$SYSROOT_PREFIX/usr/include/interface/vcos/pthreads/ \
        -I$SYSROOT_PREFIX/usr/include/interface/vmcs_host/linux"
      export LDFLAGS="$LDFLAGS -fPIC -L$SYSROOT_PREFIX/usr/lib -liconv"
     
  #    sed -i 's|export CFLAGS   =|export CFLAGS   +=|' Makefile
    }
     
    make_target() {
      VDR_DIR=$(get_build_dir vdr)
      echo "VDR_DIR=$VDR_DIR"
      make VDRDIR=$VDR_DIR \
        VDRSRC=$VDR_DIR \
        LIBDIR="." \
        LOCALEDIR="./locale" \
        LDFLAGS="$LDFLAGS -fPIC -L$SYSROOT_PREFIX/usr/lib -liconv"
    }
     
    makeinstall_target() {
      : # installation not needed, done by create-addon script
    }

